<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:background="@drawable/custom_item_list"
    android:paddingLeft="5dp"
    android:paddingBottom="7dp"
    android:id="@+id/item_nhanvien"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">



    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tennhanvien_nhanvien"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Tên: Ngọc Thanh"
            android:textColor="#131313"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_delete_nhanvien"
            android:layout_width="40sp"
            android:layout_height="35sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:background="#fff"
            android:drawableRight="@drawable/outline_settings_phone_black_24dp"
            android:paddingRight="8dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_manhanvien_nhanvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã: 23511"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        />

    <TextView
        android:id="@+id/tv_chucvu_nhanvien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chức vụ: Nhân viên"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        />

</LinearLayout>