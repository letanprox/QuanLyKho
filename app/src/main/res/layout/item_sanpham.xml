<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/custom_item_list"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:paddingBottom="7dp"
    android:id="@+id/item_sanpham"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgview_sanpham"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@id/contain_title_sanpham"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7sp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:text="Tên: Thép không rỉ "

            android:textColor="#252525"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_ma_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgview_sanpham"
            android:layout_marginTop="3dp"
            android:text="Mã: 1212"
            android:textColor="#323232"
            android:textSize="15sp"
/>

        <TextView
            android:id="@+id/tv_soluong_sanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgview_sanpham"

            android:layout_marginTop="4dp"
            android:text="Số lượng: 100"
            android:textColor="#323232"
            android:textSize="15sp"
 />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/contain_title_sanpham"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btn_delete_sanpham"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="#fff"
            android:drawableRight="@drawable/baseline_delete_black_24dp"
            android:paddingRight="12dp" />
    </LinearLayout>

</LinearLayout>