<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F6F6"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_them_phieunhap_bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true">

    <LinearLayout
        android:background="@drawable/elementline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_close_them_phieunhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:drawableLeft="@drawable/baseline_close_black_36dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Vị trí kho:"
                android:textSize="15dp"
                android:textColor="#222222"
                android:textStyle="bold" />
            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:background="@drawable/elementline"
                android:id="@+id/open_list_dialog_kho_phieunhap"
                android:text="Bình Chánh"
                android:gravity="left|center_vertical"
                android:drawablePadding="7dp"
                android:drawableLeft="@drawable/baseline_expand_more_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Nhân viên:"
                android:textSize="15dp"
                android:textColor="#222222"
                android:textStyle="bold" />


            <Button
                android:id="@+id/open_list_dialog_nhanvien_phieunhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/elementline"
                android:drawableLeft="@drawable/baseline_expand_more_black_24dp"
                android:drawablePadding="7dp"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Ngọc Lan" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Nhà cung cấp:"
                android:textSize="15dp"
                android:textColor="#222222"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/input_ma_ncc_phieunhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/edittext1"
                android:inputType="number"
                android:hint="Nhập mã nhà cung cấp"
                android:padding="5dp" />

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tenncc_phieunhap"
                    android:text="Tên: Ngọc Thi"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/sdtncc_phieunhap"
                    android:text="SDT: 2132626"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/diachincc_phieunhap"
                    android:text="Địa chỉ: 97/ Man THiện"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="10dp"

                    android:text="Sản phẩm:"
                    android:textColor="#222222"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <Button

                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn_them_sanpham_phieunhap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÊM"
                    android:drawableLeft="@drawable/baseline_add_box_black_24dp"
                    android:gravity="center_horizontal|center" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sanpham_phieunhap"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-5dp"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/tongtien_phieunhap"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tổng tiền: 15.0000"
                android:textSize="15dp"
                android:textColor="#222222"
                android:textStyle="bold" />






            <Button
                android:id="@+id/label_btn_themphieunhap"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:background="#F44336"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:text="Thêm phiếu nhập"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />



        </LinearLayout>




        </androidx.core.widget.NestedScrollView>


    </LinearLayout>






</LinearLayout>